<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Loan Tree View -->
    <record id="view_loan_tree" model="ir.ui.view">
        <field name="name">library.loan.tree</field>
        <field name="model">library.loan</field>
        <field name="arch" type="xml">
            <tree string="Loans" decoration-success="state=='returned'" decoration-danger="state=='overdue'" decoration-info="state=='borrowed'">
                <field name="book_id"/>
                <field name="reader_id"/>
                <field name="loan_date"/>
                <field name="return_date"/>
                <field name="actual_return_date"/>
                <field name="days_overdue"/>
                <field name="state" widget="badge" decoration-success="state=='returned'" decoration-danger="state=='overdue'" decoration-info="state=='borrowed'"/>
            </tree>
        </field>
    </record>

    <!-- Loan Form View -->
    <record id="view_loan_form" model="ir.ui.view">
        <field name="name">library.loan.form</field>
        <field name="model">library.loan</field>
        <field name="arch" type="xml">
            <form string="Loan">
                <header>
                    <button name="action_return_book" string="Return Book" type="object" class="btn-primary" attrs="{'invisible': [('state', '=', 'returned')]}"/>
                    <button name="action_mark_overdue" string="Mark Overdue" type="object" class="btn-warning" attrs="{'invisible': ['|', ('state', '=', 'returned'), ('state', '=', 'overdue')]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="borrowed,overdue,returned"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="book_id" options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="reader_id" options="{'no_create': True, 'no_create_edit': True}"/>
                        </group>
                        <group>
                            <field name="loan_date"/>
                            <field name="return_date"/>
                            <field name="actual_return_date" attrs="{'readonly': [('state', '!=', 'returned')]}"/>
                            <field name="days_overdue" attrs="{'invisible': [('days_overdue', '=', 0)]}"/>
                        </group>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Loan Kanban View -->
    <record id="view_loan_kanban" model="ir.ui.view">
        <field name="name">library.loan.kanban</field>
        <field name="model">library.loan</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="book_id"/>
                <field name="reader_id"/>
                <field name="loan_date"/>
                <field name="return_date"/>
                <field name="days_overdue"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="book_id"/>
                                        </strong>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div>
                                        <i class="fa fa-user"/> <field name="reader_id"/>
                                    </div>
                                    <div>
                                        <i class="fa fa-calendar"/> Loan: <field name="loan_date"/>
                                    </div>
                                    <div>
                                        <i class="fa fa-calendar-check-o"/> Return: <field name="return_date"/>
                                    </div>
                                    <div attrs="{'invisible': [('days_overdue', '=', 0)]}">
                                        <i class="fa fa-exclamation-triangle"/> 
                                        <span style="color: red;">Days Overdue: <field name="days_overdue"/></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Loan Search View -->
    <record id="view_loan_search" model="ir.ui.view">
        <field name="name">library.loan.search</field>
        <field name="model">library.loan</field>
        <field name="arch" type="xml">
            <search string="Search Loans">
                <field name="book_id"/>
                <field name="reader_id"/>
                <field name="state"/>
                <filter string="Borrowed" name="borrowed" domain="[('state', '=', 'borrowed')]"/>
                <filter string="Overdue" name="overdue" domain="[('state', '=', 'overdue')]"/>
                <filter string="Returned" name="returned" domain="[('state', '=', 'returned')]"/>
                <separator/>
                <filter string="Overdue Loans" name="overdue_loans" domain="[('days_overdue', '>', 0)]"/>
                <filter string="Today" name="today" domain="[('loan_date', '=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter string="This Week" name="this_week" domain="[('loan_date', '>=', (context_today() - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                <separator/>
                <filter string="Not Returned" name="not_returned" domain="[('state', 'in', ['borrowed', 'overdue'])]"/>
                <group expand="0" string="Group By">
                    <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Book" name="group_book" context="{'group_by': 'book_id'}"/>
                    <filter string="Reader" name="group_reader" context="{'group_by': 'reader_id'}"/>
                    <filter string="Loan Date" name="group_loan_date" context="{'group_by': 'loan_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Loan Action -->
    <record id="action_loan" model="ir.actions.act_window">
        <field name="name">Loans</field>
        <field name="res_model">library.loan</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="view_loan_search"/>
        <field name="context">{'default_state': 'borrowed'}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first loan!
            </p>
            <p>
                Record book loans and track when books are borrowed and returned.
            </p>
        </field>
    </record>
</odoo>

