<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Book Tree View -->
    <record id="view_book_tree" model="ir.ui.view">
        <field name="name">library.book.tree</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <tree string="Books" decoration-info="state=='available'" decoration-muted="state=='unavailable'" decoration-warning="state=='maintenance'">
                <field name="name"/>
                <field name="author"/>
                <field name="isbn"/>
                <field name="category"/>
                <field name="copies"/>
                <field name="available_copies"/>
                <field name="state" widget="badge" decoration-success="state=='available'" decoration-danger="state=='unavailable'" decoration-warning="state=='maintenance'"/>
            </tree>
        </field>
    </record>

    <!-- Book Form View -->
    <record id="view_book_form" model="ir.ui.view">
        <field name="name">library.book.form</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <form string="Book">
                <header>
                    <button name="action_mark_maintenance" string="Mark Maintenance" type="object" class="btn-warning" attrs="{'invisible': [('state', '=', 'maintenance')]}"/>
                    <button name="action_mark_available" string="Mark Available" type="object" class="btn-primary" attrs="{'invisible': [('state', '=', 'available')]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="available,unavailable,maintenance"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="%(view_loan_tree)d" context="{'search_default_book_id': active_id}">
                            <field name="loan_ids" widget="statinfo" string="Loans"/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name" placeholder="Enter book title"/>
                            <field name="author" placeholder="Enter author name"/>
                            <field name="isbn" placeholder="Enter ISBN"/>
                        </group>
                        <group>
                            <field name="category"/>
                            <field name="copies"/>
                            <field name="available_copies" readonly="1"/>
                        </group>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Book Kanban View -->
    <record id="view_book_kanban" model="ir.ui.view">
        <field name="name">library.book.kanban</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="name"/>
                <field name="author"/>
                <field name="state"/>
                <field name="available_copies"/>
                <field name="copies"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div>
                                        <i class="fa fa-user"/> <field name="author"/>
                                    </div>
                                    <div>
                                        <i class="fa fa-book"/> 
                                        <span>Available: <field name="available_copies"/> / <field name="copies"/></span>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="state" widget="label_selection"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Book Search View -->
    <record id="view_book_search" model="ir.ui.view">
        <field name="name">library.book.search</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <search string="Search Books">
                <field name="name" string="Title" filter_domain="['|', ('name', 'ilike', self), ('author', 'ilike', self)]"/>
                <field name="author"/>
                <field name="isbn"/>
                <field name="category"/>
                <field name="state"/>
                <filter string="Available" name="available" domain="[('state', '=', 'available')]"/>
                <filter string="Unavailable" name="unavailable" domain="[('state', '=', 'unavailable')]"/>
                <filter string="Under Maintenance" name="maintenance" domain="[('state', '=', 'maintenance')]"/>
                <separator/>
                <filter string="Low Stock" name="low_stock" domain="[('available_copies', '&lt;=', 2)]"/>
                <group expand="0" string="Group By">
                    <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Category" name="group_category" context="{'group_by': 'category'}"/>
                    <filter string="Author" name="group_author" context="{'group_by': 'author'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Book Action -->
    <record id="action_book" model="ir.actions.act_window">
        <field name="name">Books</field>
        <field name="res_model">library.book</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="view_book_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first book!
            </p>
            <p>
                Add books to your library with details like title, author, ISBN, and number of copies.
            </p>
        </field>
    </record>
</odoo>

