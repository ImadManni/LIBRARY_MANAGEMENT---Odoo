<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Reader Tree View -->
    <record id="view_reader_tree" model="ir.ui.view">
        <field name="name">library.reader.tree</field>
        <field name="model">library.reader</field>
        <field name="arch" type="xml">
            <tree string="Readers">
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="type" widget="badge" decoration-primary="type=='student'" decoration-success="type=='faculty'" decoration-info="type=='staff'" decoration-muted="type=='external'"/>
                <field name="active_loans_count"/>
            </tree>
        </field>
    </record>

    <!-- Reader Form View -->
    <record id="view_reader_form" model="ir.ui.view">
        <field name="name">library.reader.form</field>
        <field name="model">library.reader</field>
        <field name="arch" type="xml">
            <form string="Reader">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="%(view_loan_tree)d" context="{'search_default_reader_id': active_id}">
                            <field name="loan_ids" widget="statinfo" string="Loans"/>
                        </button>
                        <button class="oe_stat_button" type="object" name="%(view_loan_tree)d" context="{'search_default_reader_id': active_id, 'search_default_borrowed': 1}">
                            <div class="o_stat_info">
                                <span class="o_stat_text">Active</span>
                                <span class="o_stat_value"><field name="active_loans_count"/></span>
                            </div>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name" placeholder="Enter reader name"/>
                            <field name="email" placeholder="Enter email address"/>
                            <field name="phone" placeholder="Enter phone number"/>
                        </group>
                        <group>
                            <field name="type"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Loans History">
                            <field name="loan_ids" nolabel="1">
                                <tree string="Loans">
                                    <field name="book_id"/>
                                    <field name="loan_date"/>
                                    <field name="return_date"/>
                                    <field name="actual_return_date"/>
                                    <field name="state" widget="badge" decoration-success="state=='returned'" decoration-danger="state=='overdue'" decoration-info="state=='borrowed'"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Reader Kanban View -->
    <record id="view_reader_kanban" model="ir.ui.view">
        <field name="name">library.reader.kanban</field>
        <field name="model">library.reader</field>
        <field name="arch" type="xml">
            <kanban default_group_by="type" class="o_kanban_small_column">
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="type"/>
                <field name="active_loans_count"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div>
                                        <i class="fa fa-envelope"/> <field name="email"/>
                                    </div>
                                    <div>
                                        <i class="fa fa-phone"/> <field name="phone"/>
                                    </div>
                                    <div>
                                        <i class="fa fa-book"/> Active Loans: <field name="active_loans_count"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="type" widget="label_selection"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Reader Search View -->
    <record id="view_reader_search" model="ir.ui.view">
        <field name="name">library.reader.search</field>
        <field name="model">library.reader</field>
        <field name="arch" type="xml">
            <search string="Search Readers">
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="type"/>
                <filter string="Student" name="student" domain="[('type', '=', 'student')]"/>
                <filter string="Faculty" name="faculty" domain="[('type', '=', 'faculty')]"/>
                <filter string="Staff" name="staff" domain="[('type', '=', 'staff')]"/>
                <filter string="External" name="external" domain="[('type', '=', 'external')]"/>
                <separator/>
                <filter string="With Active Loans" name="active_loans" domain="[('active_loans_count', '>', 0)]"/>
                <group expand="0" string="Group By">
                    <filter string="Type" name="group_type" context="{'group_by': 'type'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Reader Action -->
    <record id="action_reader" model="ir.actions.act_window">
        <field name="name">Readers</field>
        <field name="res_model">library.reader</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="view_reader_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first reader!
            </p>
            <p>
                Register readers who can borrow books from the library.
            </p>
        </field>
    </record>
</odoo>

